class {
  onCreate() {
    this.state = { 
      timeLift: 0, 
      targetDate: '1970-06-30T23:59:59',
    };

    const calculateTimeLeft = () => {  
      const total = Date.parse(new Date(this.state.targetDate).toISOString()) - Date.now();  
      const milliseconds = Math.floor((total % 1000)); // 毫秒部分  
      const seconds = Math.floor((total / 1000) % 60);  
      const minutes = Math.floor((total / (1000 * 60)) % 60);  
      const hours = Math.floor((total / (1000 * 60 * 60)));  
  
      return {  
        hours,  
        minutes,  
        seconds,  
        milliseconds 
      };  
    };  
  
    this.state.timeLift = calculateTimeLeft();  
  
    const timer = setInterval(() => {  
      this.state.timeLift = calculateTimeLeft();  
    }, 100);  
  }
  onMount() {
    
  }
  onDestroy() {
    clearInterval(timer)
  }

  onInput(input) {
    const targetDate = input.targetDate

    this.state = {
      timeLift: 0,
      targetDate,
    };
  }
}

